<% provide(:title, @user.name) %>
<div id="wrap" class="container1">
<div class="row">
  <div class="col-md-4">
    <aside>
      <section class="user_info">
        <%=
          if current_user?(@user)
            render 'shared/profilepic'
          else
            gravatar_for @user, "170", "img-thumbnail"
          end
        %>
        <h1><%= link_to @user.name , @user %></h1>
        <%= render 'shared/stats' %>
        <%= render 'follow_form' if logged_in? %>
      </section>
    </aside>
  </div>
  <div class="col-md-6">
    <% if @user.microposts.any? %>
        <ol class="microposts">
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <%= render @microposts %>
        </ol>
        <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
</div>
