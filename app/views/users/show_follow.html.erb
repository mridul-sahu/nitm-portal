<% provide(:title, @title) %>
<div id="wrap">
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to gravatar_for(user, "30" ), user %>
            <% end %>
          </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-6">
    <% if @users.any? %>
        <h3><%= @title %></h3>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>
</div>