<% provide(:title, @title) %>
<div id="wrap" class="container1">
<div class="row">
  <div class="col-md-4">
  <aside>
    <section class="user_info">
      <%= gravatar_for @user ,"170","img-thumbnail"%>
      <h1><%= link_to @user.name , @user %></h1>
      <%= render 'shared/stats' %>
    </section>

    <section class="stats">
      <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
                <%= link_to gravatar_for(user, "30" ), user %>
            <% end %>
          </div>
      <% end %>
    </section>
  </aside>
  </div>
  <div class="col-md-6">
    <% if @users.any? %>
        <ul class="users follow">
          <h3><%= @title %></h3>
          <%= render @users %>
        </ul>
        <%= will_paginate %>
    <% end %>
  </div>
</div>
</div>