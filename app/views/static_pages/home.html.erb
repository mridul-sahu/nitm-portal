<% if logged_in? %>
    <div id="wrap" class="container1">
    <div class="row">
      <aside class="col-md-4">
        <section class="user_info">
          <%= link_to gravatar_for(current_user), current_user %>
          <h1><%= current_user.name %></h1>
          <span><%= link_to "view my profile", current_user %></span>
          <span><%= pluralize(current_user.microposts.count, "micropost") %></span>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
        <section class="stats">
          <%= render 'shared/stats' %>
        </section>
      </aside>
      <div class="col-md-6">
        <%= render 'shared/feed' %>
      </div>
    </div>
    </div>
<% else %>
    <!-- Intro Header -->
    <header class="intro">
      <div class="intro-body">
        <div class="container">
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <h1 class="brand-heading">NITM PORTAL</h1>
              <p class="intro-text">An awesome, free way for students to interact,
                <br>and remain connected.</p>
              <a href="#about" class="btn btn-circle page-scroll">
                <i class="fa fa-angle-double-down animated"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- About Section -->
    <section id="about" class="container content-section text-center">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <h2>About NITM Portal</h2>
          <p>NITM Portal is an online platform to connect student of <a href="http://nitmeghalaya.in/nitm_web/index.php">NIT Meghalaya</a>. The way it works is simple, you go online and read about what other students suggested, complained, raised concerns about and more and do so yourself too . Its an easy yet effective way for you to reach out.</p>
          <p>You can create micropost about anything and the person concerned, among the students from <a href="http://nitmeghalaya.in/nitm_web/submenu_std.php?subtab=44">Student's Council</a>, Hostel Councils and other respected bodies can be notified easily.</p>
          <p>Plus you get notified about any event or fun stuff happening too. <%= link_to "View More",   about_path %></p>
        </div>
      </div>
    </section>

    <!-- Download Section -->
    <section id="download" class="content-section text-center">
      <div class="download-section">
        <div class="container">
          <div class="col-lg-8 col-lg-offset-2">
            <h2>Sign Up</h2>
            <p>If you are a student at our prestigious institute, you are welcome to join the fun! </p>
            <ul class="list-inline banner-social-buttons">
              <li>
                <%= link_to "Sign up!", signup_path, { :class=>"btn btn-default btn-lg"}%>
              </li>
              <li>
                <%= link_to "Log In!", login_path, { :class=>"btn btn-default btn-lg"} %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="container content-section text-center">
      <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
          <h2>Contact Us</h2>
          <p>Feel free to email us to provide some feedback, give us suggestions, ask for help, or to just say hello!</p>
          <p><a href="mailto:mridulsahu01@gmail.com"> feedback/help </a>
          </p>
          <ul class="list-inline banner-social-buttons">
            <li>
              <a href="https://www.facebook.com/groups/nitmeghalaya/" class="btn btn-default btn-lg"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
            </li>
            <li>
              <a href="#" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
            </li>
            <li>
              <a href="#" class="btn btn-default btn-lg"><i class="fa fa-google-plus fa-fw"></i> <span class="network-name">Google+</span></a>
            </li>
          </ul>
        </div>
      </div>
    </section>
    <!--<%= link_to image_tag("rails.png", alt: "Rails logo"),
                'http://rubyonrails.org/' %> -->
<% end %>
