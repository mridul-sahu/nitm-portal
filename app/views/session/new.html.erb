<% provide(:title, "Log in") %>
<div id="wrap">
<br><br><br>
<div class="custom-form-class">
<div class="wrapper">
  <%= form_for(:session, url: login_path, :html => {:class => 'login'}) do |f| %>

    <p class="title">Log in</p>

    <%= f.email_field :email, placeholder: 'Username', autofocus: true ,required: true %>

    <i class="fa fa-user"></i>

    <%= f.password_field :password, placeholder: 'Password', required: true %>

    <i class="fa fa-key"></i>
      <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me on this computer | <%= link_to "Forgot password?", new_password_reset_path %></span>
      <% end %>

    <button>

      <i class="spinner"></i>

      <span class="state">Log in</span>

    </button>

  <% end %>
  <hr>
  <p>
    New user? <%= link_to "Sign up now!", signup_path %>
  </p>
</div>
</div>
</div>