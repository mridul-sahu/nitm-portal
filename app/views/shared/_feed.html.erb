<% if @feed_items.any? %>
    <ol class="microposts">
      <h3>Micropost Feed</h3>
      <li class="micropost_form clearfix">
        <%= link_to gravatar_for(current_user, "50"), current_user %>
        <span class="user"><%= link_to current_user.name, current_user %></span>
        <div class="content1">
          <%= render 'shared/micropost_form' %>
        </div>
      </li>
      <%= render @feed_items %>
    </ol>
    <%= will_paginate @feed_items %>
<% else %>
    <ol class="microposts">
      <h3>Micropost Feed</h3>
      <li class="micropost_form clearfix"><%= render 'shared/micropost_form' %></li>
    </ol>
<% end %>