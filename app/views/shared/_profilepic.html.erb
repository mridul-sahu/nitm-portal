<%= form_for( @user, :url => profile_picture_user_path( @user ), :html => { :method => :post, multipart: true } ) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="image-upload">
    <%= f.label :picture, (gravatar_for @user).html_safe %>
    <%= f.file_field :picture, accept: 'image/jpeg,image/png' %>
    </div>
<% end %>

<script type="text/javascript">
  $('#user_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 10) {
      alert('Maximum file size is 10MB. Please choose a smaller file.');
    }
  });

  $('#user_picture').change(function() {
    $('.edit_user').submit();
  });
</script>
